<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="\css\style.css" />

<div class="mt-3">
	<!-- Display Flash Message -->
	<% if (error) { %>
	<div><%= error %></div>
	<% } %>

	<br />

	<!-- Display Listings -->
	<% if (listings.length === 0) { %>
	<br />
	<br />

	<h3 style="font-family: Georgia, 'Times New Roman', Times, serif">
		<i> No listings found for your search criteria. </i><br /><br /><br />
		<a href="/listings/new"><i>Isara your place</i></a> |
		<a href="/listings"><i>Explore</i></a>
	</h3>
	<% } else { %>
	<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
		<% listings.forEach(function(listing) { %>
		<a href="/listings/<%= listing._id %>" class="listing-link">
			<div class="card col listing-card">
				<img
					src="<%= listing.image.url %>"
					class="card-img-top"
					alt="listing_image"
					style="height: 20rem" />
				<div class="card-body">
					<p class="card-text">
						<b><%= listing.title %></b> <br />
						&#8377; <%= listing.price.toLocaleString("en-IN") %> / night
						<b class="tax-info">&nbsp; + 12% GST</b>
					</p>
				</div>
			</div>
		</a>
		<% }); %>
	</div>
	<% } %>
</div>
